.temp_box{
  display: flex;
  flex-direction: row;
  height: 250rpx;
  width: 720rpx;
  font-size: 28rpx;
  border-radius:10rpx 20rpx; 
  margin-top: 20rpx;
  padding-top: 10px;
  margin-left: 15rpx;
  background: #fff;
  box-shadow: 5rpx 6rpx #ddd;
}
.itemTitle{
   font-weight: bold;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}
.temp_title{
   font-size: 24rpx;
}
.left{
  text-align: center;
  width:35%;
  height: 100%;
}
.temp_box image{
   margin: 0 auto;
   height: 180rpx;
   width:70%;
}
.right{
  font-size: 26rpx;
  width:65%;
  height: 100%;
  padding:30rpx 10rpx 0rpx 10rpx; 
  align-items: center;
}
.right view{
   line-height: 40rpx;
}

.time{
  color:#aaa;
     overflow: hidden;
   text-overflow: ellipsis; 
}
.right .remark{
   width: 100%;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}
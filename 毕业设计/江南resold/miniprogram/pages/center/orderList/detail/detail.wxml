<!--pages/detail/detail.wxml-->
<!--pages/center/center.wxml-->
<view class='box'>
  <swiper autoplay="true" interval="5000" duration="1000" indicator-dots="true" indicator-active-color='#F00a'>
          <block wx:for="{{good.goodsImage}}" wx:key="loop" >
          <swiper-item >
            <image class="navImage" src="{{item}}" mode='aspectFit' class="slide-image" />
          </swiper-item>
          </block>
  </swiper>
<view class='senderBox' wx:if="{{good.goodsStatus=='1'}}">
   <image src="{{good.send_avatarUrl}}"></image>
   <view class="senderName">{{good.send_nickname}}</view>
   <view class='text'>{{good.sender_gender=="男"?"♂":"♀"}}</view>
</view>
<view class='StatusBox' wx:if="{{good.goodsStatus=='0'}}">
   <view class="senderName">暂未被预约</view>
</view>
<view class='yuan_box'>
  <view class='yuan' bindtap='to_same' >
    <image src='../../../../images/center1 (1).png'></image>
    <view class='text'>物品名称：{{good.goodsName}}  <span class="goodsNum">(数量{{good.goodsNum}})</span></view>
  </view>
  <view class='yuan'>
    <image src='../../../../images/center1 (4).png'></image>
    <view class='text'>发布时间：{{good.releaseTime}}</view>
  </view>
  <view class='yuan'>
    <image src='../../../../images/center1 (2).png'></image>
    <view class='text'>接受价位：{{good.goodsMinprice}}￥→{{good.goodsMaxprice}}￥</view>
  </view>
  <view class='yuan'>
    <image src='../../../../images/center1 (3).png'></image>
    <view class='text'>备注：{{good.goodsremark}}</view>
  </view>
  <view class='yuan'>
    <image src='../../../../images/center1 (4).png'></image>
    <view class='text'>联系方式：{{good.goodsphone}}</view>
  </view>
  <view class='yuan'>
    <button class='bingo' bindtap='bingo'>取消订单</button>
    <button class='bingo' bindtap='bingo' hidden="{{good.goodsStatus=='0'}}" >完结订单</button>
  </view>
</view>
</view>



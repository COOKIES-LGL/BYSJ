@keyframes addheart {
  0%{
      bottom: 0rpx;
      width: 60rpx;
      height:50rpx; 
  }
  25%{
      bottom: 10rpx;
      width: 68rpx;
      height:56rpx; 
  }
  50%{
      bottom: 15rpx;
      width: 70rpx;
      height:60rpx; 
  }
  75%{
      bottom: 10rpx;
      width: 68rpx;
      height:56rpx; 
  }
  100%{
      bottom: 0rpx;
      width: 60rpx;
      height:50rpx; 
  }
}

.addheart {
animation: addheart 1s linear infinite; 
}  
page{
  background-color: rgb(245, 245, 245);
}
.box{
   display: flex;
   flex-direction: column;
}
.box .top{
   float: left;
   width: 90%;
   margin-left: 5%;
   height:80rpx;
   font-size: 30rpx;
   line-height: 80rpx;
   font-weight: bold;
}
.box .mesgList{
   float: left;
}
.mesgBox{
width: 100%;
background-color:#fff;
height: 150rpx;
overflow: auto;
display: flex;
flex-direction: row;
font-size: 28rpx;
border-bottom: 2rpx solid #999;
}
.mesgBox .left{
width:20%;
padding: 25rpx;
}
.mesgBox .left image{
   height: 100rpx;
   width:100rpx;
   border-radius: 50%;
}
.mesgBox .mid{
width:50%;
display: flex;
flex-direction: column;
}
.mesgBox .right{
width:30%;
font-size: 26rpx; 
color:#bbb;
margin-top: 80rpx;
}
.nickName{
color: rgb(10, 250, 218);
height: 60rpx;
line-height: 60rpx;
}
.mesg{
color:#888;
font-size: 26rpx;
overflow: hidden;
text-overflow: ellipsis;
}
